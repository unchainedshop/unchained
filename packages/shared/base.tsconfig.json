{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "esnext",
    "types": ["node", "jest"]
  }
}
