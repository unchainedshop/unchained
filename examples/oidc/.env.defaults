OIDC_PROVIDER_NAME=keycloak
# The issuer URL must match the 'iss' claim in the JWT tokens
OIDC_ISSUER_URL=http://localhost:8080/realms/master
# The expected audience (typically your client ID)
OIDC_AUDIENCE=unchained
# Optional: Path to roles in the token (dot-separated, e.g., 'resource_access.client.roles')
OIDC_ROLES_PATH=
