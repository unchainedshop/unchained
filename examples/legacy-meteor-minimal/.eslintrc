{
  "parser": "babel-eslint",
  "plugins": ["prettier"],
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "root": true,
  "env": {
    "node": true,
    "browser": false,
    "meteor": true
  },
  "settings": {
    "import/core-modules": ["meteor"],
    "import/resolver": {
      "meteor": {
        "extensions": [".jsx", ".js", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "proseWrap": "always"
      }
    ],
    "import/extensions": [0],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }]
  }
}
